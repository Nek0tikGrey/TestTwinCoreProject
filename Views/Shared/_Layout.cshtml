<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TwinCore щоденник</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-md">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img width="35px" src="~/img/brand.svg"/></a>
                <div class="d-flex justify-content-between">
                    <div>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-menu-item navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse bg-dark">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Note" asp-action="Index">Note</a>
                                </li>

                                
                            </ul>
                        </div>
                    </div>
                    <div>
                      
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <a class="avatar-btn btn btn-secondary dropdown-toggle" href="#" role="button" id="Avatar" data-bs-toggle="dropdown" aria-expanded="false">
                                   
                                        <img width="35px"/>

                                </a>
                                <ul class="dropdown-menu p-0 bg-dark" aria-labelledby="Avatar">
                                    <li>
                                        <a class="dropdown-item text-light avatar-item-menu" asp-controller="Account" asp-action="UserAccount">Моя страница</a>
                                    </li>


                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li class="nav-item">
                                            <a class="dropdown-item text-light avatar-item-menu" asp-area="" asp-controller="User" asp-action="Index">User management</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="dropdown-item text-light avatar-item-menu" asp-area="" asp-controller="Role" asp-action="Index">Role</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="dropdown-item text-light avatar-item-menu" asp-area="" asp-controller="InviteUser" asp-action="Index">Invite</a>
                                        </li>
                                    }

                                    <li>
                                        <form class="dropdown-item text-light avatar-item-menu" method="post" asp-controller="Account" asp-action="Logout">
                                            <input class="avatar-item-menu-btn" type="submit" value="Выход" />
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {  
                    <div class="dropdown">
                        <a class="avatar-btn btn btn-secondary dropdown-toggle" href="#" role="button" id="Avatar" data-bs-toggle="dropdown" aria-expanded="false">
                            <img width="35px" src="~/img/avatar.png" />
                        </a>

                        <ul class="dropdown-menu p-0 bg-dark " aria-labelledby="Avatar">
                            <li>
                                <a class="dropdown-item text-light avatar-item-menu" asp-controller="Account" asp-action="Login">Вход</a>
                            </li>
                            <li>
                                <a class="dropdown-item text-light avatar-item-menu" asp-controller="Account" asp-action="RestoreAccount">Відновлення доступа</a>
                            </li>
                        </ul>
                    </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-md">
        <main role="main" class="pb-3 mt-5 pt-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - TestTwinCoreProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"
            integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU="
            crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
