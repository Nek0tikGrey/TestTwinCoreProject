@model TestTwinCoreProject.ViewModels.LoginViewModel
@{ 
    ViewData["Title"] = "Войти";
}
<section class="d-flex justify-content-center">
    <form class="login-form" method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Email"></label><br />
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="RememberMe"></label><br />
            <input asp-for="RememberMe" />
        </div>
        <div class="d-flex justify-content-end">
            <input class="btn-sd" type="submit" value="Войти" />
        </div>
    </form>
</section>