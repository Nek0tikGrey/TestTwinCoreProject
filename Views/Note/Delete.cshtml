@model TestTwinCoreProject.Models.Note
@{
    ViewBag.Title = "Видалити";
}

<div>
    <dl>
        <dt>Заголовок</dt>
        <dd>@Html.DisplayFor(model=>model.Title)</dd>
        <dt>Вміст</dt>
        <dt>@Html.DisplayFor(model=>model.Content)</dt>
    </dl>
</div>
<form asp-action="Delete" asp-controller="Note">
    <div asp-validation-summary="All" class="text-danger"></div>
   

    <div class="form-group">
        <input type="submit" value="Видалити" class="btn btn-outline-secondary" />
    </div>
</form>